[Unit]
Description=Main docker containers that should be started at every boot
Documentation=gitolite_local:docker/
After=network.target docker.service home-martin.mount
Wants=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/martin/gistin/docker/systemd/configfiles
ExecStart=/usr/bin/python /usr/local/bin/docker_start.py -e juergen_environment.yaml dev_servers_startup.yaml
ExecStop=/usr/bin/python /usr/local/bin/docker_start.py --stop-all -e juergen_environment.yaml dev_servers_startup.yaml

[Install]
WantedBy=mutli-user.target
